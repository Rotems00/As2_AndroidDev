<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDetailsActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="362dp"
        android:scaleType="center"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/student_details_activity_text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/student_details_activity_text_view_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/student_details_activity_text_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="ID"
        app:layout_constraintBottom_toTopOf="@+id/student_details_activity_text_view_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_text_view_name" />

    <TextView
        android:id="@+id/student_details_activity_text_view_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Phone Number"
        app:layout_constraintBottom_toTopOf="@+id/student_details_activity_text_view_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_text_view_id" />

    <TextView
        android:id="@+id/student_details_activity_text_view_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Address"
        app:layout_constraintBottom_toTopOf="@+id/student_details_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_text_view_phone" />

    <TextView
        android:id="@+id/student_details_textview_name_added"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="185dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_text_view_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_activity_text_view_name" />

    <TextView
        android:id="@+id/student_details_textview_id_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_text_view_id"
        app:layout_constraintStart_toStartOf="@+id/student_details_textview_name_added" />

    <TextView
        android:id="@+id/student_details_textview_phone_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_text_view_phone"
        app:layout_constraintStart_toStartOf="@+id/student_details_textview_id_added" />

    <TextView
        android:id="@+id/student_details_textview_address_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_text_view_address"
        app:layout_constraintStart_toStartOf="@+id/student_details_textview_phone_added" />

    <CheckBox
        android:id="@+id/student_details_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_student_details_edit_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_text_view_address" />

    <Button
        android:id="@+id/activity_student_details_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
